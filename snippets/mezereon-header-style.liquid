#mz-app {
    min-height: 350px;
    position: relative;
}

.mz-loader {
    left: 0;
    margin: auto;
    overflow: auto;
    position: absolute;
    right: 0;
    top: 150px;
}

[v-cloak] {
    display: none;
}

{%- if shop.metafields.mezereon.suggest == 'enabled' -%}
    .js_search_results {
        display: none;
    }
{%- endif -%}

{%- if shop.metafields.mezereon.collection == 'enabled' -%}
{%- capture filterEnabled -%}{% include 'mezereon-filter-layout', f: 'filter-enabled' %}{%- endcapture -%}
{%- assign filterEnabled = filterEnabled | strip -%}
{%- if filterEnabled == 'enabled' -%}
    .engoj-collection-sidebar, .mezereon .shop_control, .product-grid-view {
        display: none !important;
    }
{%- endif -%}
{%- endif -%}
